<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Rejected Products - ElectroLand</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    body {
      background: #f5f6fa;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    .container {
      margin-top: 90px;
      display: flex;
      flex: 1;
      gap: 20px;
      padding: 0 20px !important; /* Standardized padding with !important to prevent override */
      max-width: 100%;
    }
    .content-area {
      background: #ffffff;
      border-radius: 15px;
      padding: 25px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      flex: 1;
      height: calc(100vh - 90px); /* Match sidebar height */
      overflow-y: auto; /* Enable scrolling */
      -ms-overflow-style: none; /* Hide scrollbar in IE and Edge */
      scrollbar-width: none; /* Hide scrollbar in Firefox */
    }
    .content-area::-webkit-scrollbar {
      display: none; /* Hide scrollbar in Webkit browsers */
    }
    .content-area h1 {
      color: #2d3436;
      margin-bottom: 20px;
      font-size: 1.5rem;
    }
    .header-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }
    .form-row {
      display: flex;
      gap: 15px;
      flex-wrap: wrap;
      margin-bottom: 20px;
    }
    .form-group {
      flex: 1 1 45%;
      min-width: 200px;
      max-width: 400px;
    }
    .form-group label {
      display: block;
      margin-bottom: 5px;
      color: #2d3436;
      font-weight: 500;
      font-size: 0.9rem;
    }
    .form-group input {
      width: 100%;
      padding: 8px;
      border: 1px solid #e6e9f0;
      border-radius: 5px;
      font-size: 0.9rem;
      background: #f8f9fa;
      color: #2d3436;
      transition: border-color 0.3s;
    }
    .search-group {
      flex: 1 1 100%;
      max-width: 300px;
    }
    .products-container {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
    }
    .product-item {
      flex: 1 1 calc(33.33% - 20px); /* Consistent three-column layout */
      background: #ffffff;
      border-radius: 10px;
      padding: 15px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      text-align: center;
      min-width: 0; /* Allow shrinking */
      max-width: calc(33.33% - 20px); /* Restrict maximum width */
    }
    .slideshow-container {
      position: relative;
      width: 100%;
      margin: 0 auto 10px auto;
    }
    .slides {
      display: none;
      width: 100%;
      height: auto;
      border-radius: 5px;
    }
    .slides.active {
      display: block;
    }
    .product-details {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }
    .clickable {
      cursor: pointer;
      color: #2d3436;
      font-size: 1.1rem;
      font-weight: 500;
      letter-spacing: 0.5px;
      transition: color 0.3s ease;
    }
    .clickable:hover {
      color: #636e72;
    }
    /* Responsive adjustments */
    @media (max-width: 768px) {
      .container {
        flex-direction: column;
        padding: 0; /* Keep sidebar flush left */
      }
      .content-area {
        padding: 15px;
        height: auto; /* Expand naturally on mobile */
      }
      .header-container {
        flex-direction: column;
        align-items: flex-start;
      }
      .form-row {
        flex-direction: column;
      }
      .form-group {
        flex: 1 1 100%;
      }
      .search-group {
        max-width: 100%;
      }
      .content-area h1 {
        font-size: 1.2rem; /* Adjusted for mobile */
      }
      .product-item {
        flex: 1 1 calc(33.33% - 13.33px); /* Adjust gap proportionately */
        max-width: calc(33.33% - 13.33px); /* Maintain consistent width */
      }
      .slideshow-container {
        width: 100%;
      }
      .clickable {
        font-size: 1rem;
      }
    }
    @media (min-width: 769px) and (max-width: 1024px) {
      .content-area h1 {
        font-size: 1.3rem;
      }
    }
  </style>
</head>
<body>
  <%- include('../../partials/navbar') %>

  <div class="container">
    <%- include('../../partials/admin_sidebar') %>

    <!-- Content Area -->
    <div class="content-area" id="content">
      <div class="header-container">
        <h1>Rejected Products</h1>
      </div>
      <div class="form-row">
        <div class="form-group search-group">
          <label for="searchRejectedProduct">Search by Product ID</label>
          <input type="text" id="searchRejectedProduct" placeholder="Enter Product ID" oninput="filterRejectedProducts()">
        </div>
      </div>

      <!-- Product items -->
      <div class="products-container" id="productsContainer">
      </div>
    </div>
  </div>
  <%- include('../../partials/footer') %>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      fetch('/admin/products/rejected/data')
        .then(response => response.json())
        .then(products => {
          const container = document.getElementById('productsContainer');
          products.forEach(product => {
            const productItem = document.createElement('div');
            productItem.className = 'product-item';
            let photosHtml = '';
            if (product.prod_photos && product.prod_photos.length > 0) {
              product.prod_photos.forEach((photo, index) => {
                photosHtml += `<img src="${photo}" alt="Product Photo" class="slides ${index === 0 ? 'active' : ''}">`;
              });
            } else {
              photosHtml = '<img src="/placeholder.jpg" alt="No Photo" class="slides active">';
            }
            productItem.innerHTML = `
              <div class="slideshow-container" data-pid="${product.prod_id}" onclick="window.location.href='/admin/products/details/${product.prod_id}'">
                ${photosHtml}
              </div>
              <div class="product-details">
                <span class="clickable" onclick="window.location.href='/admin/products/details/${product.prod_id}'">${product.prod_id}</span>
                <span class="clickable" onclick="window.location.href='/admin/products/details/${product.prod_id}'">${product.Model_no}</span>
                <span class="clickable" onclick="window.location.href='/admin/products/details/${product.prod_id}'">${product.stock}</span>
                <span class="clickable" onclick="window.location.href='/admin/products/details/${product.prod_id}'">${product.Status}</span>
              </div>
            `;
            container.appendChild(productItem);
          });
          initSlideshow();
        })
        .catch(error => console.error('Error fetching rejected products:', error));
    });

    function filterRejectedProducts() {
      const searchInput = document.getElementById('searchRejectedProduct').value.toLowerCase();
      const productItems = document.querySelectorAll('.product-item');
      productItems.forEach(item => {
        const prodIdElement = item.querySelector('.product-details span:first-child');
        const prodId = prodIdElement ? prodIdElement.textContent.toLowerCase() : '';
        if (searchInput === '' || prodId.includes(searchInput)) {
          item.style.display = '';
        } else {
          item.style.display = 'none';
        }
      });
    }

    function initSlideshow() {
      document.querySelectorAll('.slideshow-container').forEach(container => {
        const slides = container.querySelectorAll('.slides');
        let currentSlide = 0;
        function showNextSlide() {
          slides[currentSlide].classList.remove('active');
          currentSlide = (currentSlide + 1) % slides.length;
          slides[currentSlide].classList.add('active');
        }
        if (slides.length > 0) {
          slides[0].classList.add('active');
          setInterval(showNextSlide, 2000);
        }
      });
    }
  </script>
</body>
</html>