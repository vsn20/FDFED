        </a>
      </div>
    </div>
    <div class="content-area">
      <h1>All Orders</h1>
      <div class="form-row">
        <div class="form-group search-group">
          <label for="searchOrders">Search by Order ID/Branch Name</label>
          <input type="text" id="searchOrders" placeholder="Enter Order ID or Branch Name" oninput="filterOrders()">
        </div>
      </div>
      <div id="loading">Loading orders...</div>

      <div class="table-wrapper" id="table-container" style="display: none;">
        <table>
          <thead>
            <tr>
              <th>Order ID</th>
              <th>Branch</th>
              <th>Company</th>
              <th>Product</th>
              <th>Status</th>
              <th>Delivery Date</th>
            </tr>
          </thead>
          <tbody id="orders-tbody">
            <!-- Data populated via JS -->
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <%- include('../../partials/footer') %>

  <script>
    const tbody = document.getElementById('orders-tbody');
    const loading = document.getElementById('loading');
    const tableContainer = document.getElementById('table-container');

    async function loadOrders() {
      try {
        const response = await fetch('/admin/orders/data');
        if (!response.ok) throw new Error('Failed to fetch');
        const orders = await response.json();
        tbody.innerHTML = ''; // Clear existing rows
        orders.forEach(order => {
          const row = document.createElement('tr');
          const deliveryDate = order.delivery_date ? new Date(order.delivery_date).toLocaleDateString() : 'Not Set';
          row.innerHTML = `
            <td data-label="Order ID">${order.order_id}</td>
            <td data-label="Branch">${order.branch_name}</td>
            <td data-label="Company">${order.company_name}</td>
            <td data-label="Product">${order.product_name}</td>
            <td data-label="Status">${order.status}</td>
            <td data-label="Delivery Date">${deliveryDate}</td>
          `;
          tbody.appendChild(row);
        });
        loading.style.display = 'none';
        tableContainer.style.display = 'block';
      } catch (error) {
        console.error('Error loading orders:', error);
        loading.textContent = 'Error loading orders. Please refresh.';
      }
    }

    function filterOrders() {
      const searchInput = document.getElementById('searchOrders').value.toLowerCase();
      const rows = tbody.getElementsByTagName('tr');
      for (let row of rows) {
        const orderId = row.cells[0].textContent.toLowerCase();
        const branchName = row.cells[1].textContent.toLowerCase();
        if (searchInput === '' || orderId.includes(searchInput) || branchName.includes(searchInput)) {
          row.style.display = '';
        } else {
          row.style.display = 'none';
        }
      }
    }

    // Initial load
    loadOrders();
  </script>
</body>
</html>