<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Employee Details - ElectroLand</title>
  <link rel="stylesheet" href="/styles.css"> <!-- Import form styles -->
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #f5f6fa;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .container {
      margin-top: 90px;
      display: flex;
      flex: 1;
      gap: 25px;
      padding: 0 20px !important; /* Standardized padding with !important to prevent override */
      max-width: 100%;
    }

    .content-area {
      background: #ffffff;
      border-radius: 15px;
      padding: 25px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      flex: 1;
    }

    .content-area h1 {
      color: #2d3436;
      margin-bottom: 20px;
    }

    .edit-button {
      display: inline-block;
      padding: 10px 20px;
      background-color: #2d3436;
      color: white;
      text-decoration: none;
      border-radius: 5px;
      margin-top: 20px;
    }

    .edit-button:hover {
      background-color: #FFD700;
      color: #2d3436;
    }

    input[readonly], select[readonly], textarea[readonly] {
      background-color: #e9ecef;
      cursor: not-allowed;
    }

    @media (max-width: 768px) {
      .container {
        flex-direction: column;
        padding: 0 20px;
      }

      .content-area {
        min-height: auto;
      }
    }
  </style>
</head>
<body>
  <%- include('../../partials/navbar') %>

  <div class="container">
    <%- include('../../partials/admin_sidebar') %>

    <!-- Content Area -->
    <div class="content-area" id="content">
      <div class="form-container">
        <h2>Employee Details</h2>
        <form>
          <!-- Personal Details Section -->
          <fieldset>
            <legend>Personal Details</legend>
            <div class="field-group">
              <div>
                <label for="e_id">Employee ID</label>
                <input type="text" id="e_id" value="<%= employee.e_id %>" readonly>
              </div>
              <div>
                <label for="f_name">First Name</label>
                <input type="text" id="f_name" value="<%= employee.f_name %>" readonly>
              </div>
              <div>
                <label for="last_name">Last Name</label>
                <input type="text" id="last_name" value="<%= employee.last_name %>" readonly>
              </div>
              <div>
                <label for="role">Role</label>
                <input type="text" id="role" value="<%= employee.role %>" readonly>
              </div>
              <div>
                <label for="bid">Branch</label>
                <input type="text" id="bid" value="<%= employee.bid || 'Not Assigned' %>" readonly>
              </div>
              <div>
                <label for="status">Status</label>
                <input type="text" id="status" value="<%= employee.status %>" readonly>
              </div>
              <div>
                <label for="email">Email</label>
                <input type="email" id="email" value="<%= employee.email %>" readonly>
              </div>
              <div>
                <label for="phone_no">Phone Number</label>
                <input type="tel" id="phone_no" value="<%= employee.phone_no || 'N/A' %>" readonly>
              </div>
            </div>
          </fieldset>

          <!-- Account and Salaries Section -->
          <fieldset>
            <legend>Account and Salaries</legend>
            <div class="field-group">
              <div>
                <label for="acno">Account Number</label>
                <input type="text" id="acno" value="<%= employee.acno %>" readonly>
              </div>
              <div>
                <label for="ifsc">IFSC Code</label>
                <input type="text" id="ifsc" value="<%= employee.ifsc %>" readonly>
              </div>
              <div>
                <label for="bankname">Bank Name</label>
                <input type="text" id="bankname" value="<%= employee.bankname %>" readonly>
              </div>
              <div>
                <label for="base_salary">Monthly Salary</label>
                <input type="number" id="base_salary" value="<%= employee.base_salary %>" readonly>
              </div>
              <div>
                <label for="address">Address</label>
                <textarea id="address" readonly><%= employee.address || 'N/A' %></textarea>
              </div>
            </div>
          </fieldset>

          <!-- Additional Details -->
          <fieldset>
            <legend>Additional Details</legend>
            <div class="field-group">
              <div>
                <label for="hiredAt">Hired At</label>
                <input type="text" id="hiredAt" value="<%= employee.hiredAt.toDateString() %>" readonly>
              </div>
              <div>
                <label for="createdBy">Created By</label>
                <input type="text" id="createdBy" value="<%= employee.createdBy %>" readonly>
              </div>
              <div>
                <label for="resignation_date">Resignation Date</label>
                <input type="text" id="resignation_date" value="<%= employee.resignation_date ? employee.resignation_date.toDateString() : 'N/A' %>" readonly>
              </div>
              <div>
                <label for="fired_date">Fired Date</label>
                <input type="text" id="fired_date" value="<%= employee.fired_date ? employee.fired_date.toDateString() : 'N/A' %>" readonly>
              </div>
              <div>
                <label for="reason_for_exit">Reason for Exit</label>
                <input type="text" id="reason_for_exit" value="<%= employee.reason_for_exit || 'N/A' %>" readonly>
              </div>
            </div>
          </fieldset>
        </form>
        <a href="/admin/employee/edit/<%= employee.e_id %>" class="edit-button">Edit Employee</a>
      </div>
    </div>
  </div>

  <%- include('../../partials/footer') %>
</body>
</html>