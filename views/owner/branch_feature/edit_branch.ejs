<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Branch - ElectroLand</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: #f5f6fa;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .container {
            margin-top: 90px;
            display: flex;
            flex: 1;
            gap: 25px;
            padding: 0 20px;
        }

        .content-area {
            background: #ffffff;
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            flex: 1;
            overflow-x: auto;
        }

        .content-area h1 {
            color: #2d3436;
            margin-bottom: 20px;
            font-size: 1.5rem;
        }

        .content-area p {
            color: #636e72;
            line-height: 1.6;
            font-size: 0.9rem;
        }

        .form-section {
            margin-bottom: 20px;
            padding: 15px;
            border: 1px solid #e6e9f0;
            border-radius: 5px;
        }

        .section-title {
            color: #2d3436;
            font-size: 1.2rem;
            margin-bottom: 15px;
            font-weight: bold;
            padding: 0 10px;
        }

        .field-group {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
        }

        .field-group > div {
            flex: 1 1 45%;
            min-width: 200px;
        }

        .field-label {
            display: block;
            margin-bottom: 5px;
            color: #2d3436;
            font-weight: 500;
        }

        .field-input, .field-textarea {
            width: 100%;
            padding: 8px;
            border: 1px solid #e6e9f0;
            border-radius: 5px;
            font-size: 0.9rem;
            background: #fff;
            transition: border-color 0.3s;
        }

        .field-textarea {
            height: 100px;
            resize: vertical;
        }

        .field-input:focus, .field-textarea:focus {
            border-color: #333333;
            outline: none;
        }

        .disabled-field {
            background: #f0f0f0;
            cursor: not-allowed;
        }

        .form-btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #333333;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 0.9rem;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .form-btn:hover:not(:disabled) {
            background-color: #555555;
        }

        .form-btn:disabled {
            background-color: #bdc3c7;
            cursor: not-allowed;
        }

        #error-message, #success-message {
            font-size: 0.85rem;
            margin: 10px 0;
            text-align: center;
        }

        #error-message {
            color: #e74c3c;
        }

        #success-message {
            color: #27ae60;
        }

        #loading {
            text-align: center;
            padding: 20px;
            color: #636e72;
        }

        @media (max-width: 768px) {
            .container {
                flex-direction: column;
                padding: 0 10px;
            }

            .content-area {
                padding: 15px;
            }

            .content-area h1 {
                font-size: 1.2rem;
            }

            .section-title {
                font-size: 1.1rem;
            }

            .field-group > div {
                flex: 1 1 100%;
            }

            .form-btn {
                width: 100%;
                padding: 8px;
                font-size: 0.85rem;
            }
        }

        @media (min-width: 769px) and (max-width: 1024px) {
            .content-area h1 {
                font-size: 1.3rem;
            }

            .field-group > div {
                flex: 1 1 45%;
            }
        }
    </style>
</head>
<body>
    <%- include('../../partials/navbar') %>

    <div class="container">
        <%- include('../../partials/admin_sidebar') %>

        <div class="content-area" id="content">
            <h1>Edit Branch</h1>
            <div id="loading">Loading branch details...</div>
            <div id="form-container" style="display: none;">
                <form id="edit-branch-form">
                    <fieldset class="form-section">
                        <legend class="section-title">Branch Information</legend>
                        <div class="field-group">
                            <div>
                                <label for="branch-id" class="field-label">Branch ID</label>
                                <input type="text" id="branch-id" name="bid" class="field-input disabled-field" readonly>
                            </div>
                            <div>
                                <label for="branch-name" class="field-label">Branch Name</label>
                                <input type="text" id="branch-name" name="b_name" class="field-input" required>
                            </div>
                            <div>
                                <label for="manager-name" class="field-label">Manager Name</label>
                                <input type="text" id="manager-name" name="manager_name" class="field-input disabled-field" readonly>
                            </div>
                            <div>
                                <label for="manager-email" class="field-label">Manager Email</label>
                                <input type="email" id="manager-email" name="manager_email" class="field-input disabled-field" readonly>
                            </div>
                            <div>
                                <label for="manager-phone" class="field-label">Manager Phone</label>
                                <input type="tel" id="manager-phone" name="manager_ph_no" class="field-input disabled-field" readonly>
                            </div>
                            <div class="field-group">
                                <label for="address" class="field-label">Address</label>
                                <textarea id="address" name="address" class="field-textarea" required></textarea>
                            </div>
                        </div>
                    </fieldset>
                    <div id="error-message"></div>
                    <div id="success-message"></div>
                    <button type="submit" class="form-btn">Update Branch</button>
                </form>
            </div>
            <p id="not-found" style="display: none;">Branch not found.</p>
        </div>
    </div>

    <%- include('../../partials/footer') %>

    <script>
        const urlParts = window.location.pathname.split('/');
        const bid = urlParts[urlParts.length - 1];
        const loading = document.getElementById('loading');
        const formContainer = document.getElementById('form-container');
        const notFound = document.getElementById('not-found');
        const form = document.getElementById('edit-branch-form');
        const errorMessage = document.getElementById('error-message');
        const successMessage = document.getElementById('success-message');
        const submitBtn = form.querySelector('button[type="submit"]');

        async function loadBranch() {
            try {
                const response = await fetch(`/admin/branches/data/${bid}`);
                if (!response.ok) {
                    if (response.status === 404) {
                        loading.style.display = 'none';
                        notFound.style.display = 'block';
                        return;
                    }
                    throw new Error('Failed to fetch');
                }
                const branch = await response.json();
                // Populate form
                document.getElementById('branch-id').value = branch.bid;
                document.getElementById('branch-name').value = branch.b_name;
                document.getElementById('manager-name').value = branch.manager_name;
                document.getElementById('manager-email').value = branch.manager_email;
                document.getElementById('manager-phone').value = branch.manager_ph_no;
                document.getElementById('address').value = branch.location;
                // Ensure readonly fields have attributes
                ['branch-id', 'manager-name', 'manager-email', 'manager-phone'].forEach(id => {
                    const input = document.getElementById(id);
                    input.readOnly = true;
                    input.classList.add('disabled-field');
                });
                loading.style.display = 'none';
                formContainer.style.display = 'block';
            } catch (error) {
                console.error('Error loading branch:', error);
                loading.textContent = 'Error loading branch details. Please refresh.';
            }
        }

        form.addEventListener('submit', async function(event) {
            event.preventDefault();
            errorMessage.textContent = '';
            successMessage.textContent = '';
            submitBtn.disabled = true;

            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());

            try {
                const response = await fetch(`/admin/branches/edit/${bid}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (response.ok) {
                    successMessage.textContent = result.message || 'Branch updated successfully!';
                    setTimeout(() => {
                        window.location.href = '/admin/branches';
                    }, 1500);
                } else {
                    errorMessage.textContent = result.error || 'Error updating branch';
                }
            } catch (error) {
                errorMessage.textContent = 'Network error: ' + error.message;
            } finally {
                submitBtn.disabled = false;
            }
        });

        // Initial load
        if (bid) {
            loadBranch();
        } else {
            loading.textContent = 'Invalid branch ID.';
            loading.style.display = 'block';
        }
    </script>
</body>
</html>