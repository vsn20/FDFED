<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - ElectroLand</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    body {
      background: #f5f6fa;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    .container {
      margin-top: 90px;
      display: flex;
      flex: 1;
      gap: 25px;
      padding: 0 20px !important;
      max-width: 100%;
    }
    .content-area {
      background: #ffffff;
      border-radius: 15px;
      padding: 20px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      flex: 1;
      height: calc(100vh - 90px); /* Match sidebar height */
      overflow-y: auto; /* Enable vertical scrolling */
      overflow-x: auto; /* Preserve horizontal scrolling */
    }
    /* Hide scrollbar visually in WebKit browsers (Chrome, Safari) */
    .content-area::-webkit-scrollbar {
      display: none;
    }
    /* Hide scrollbar in Firefox */
    .content-area {
      scrollbar-width: none;
    }
    /* Hide scrollbar in IE/Edge */
    .content-area {
      -ms-overflow-style: none;
    }
    .content-area h1 {
      color: #2d3436;
      margin-bottom: 20px;
      font-size: 1.5rem;
      transition: color 0.3s;
    }
    .content-area h1:hover {
      color: #555555;
    }
    .header-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
      flex-wrap: wrap;
    }
    .btn {
      background: #333333;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      text-decoration: none;
      white-space: nowrap;
      transition: background-color 0.3s;
      font-size: 0.9rem;
      margin-left: 10px;
    }
    .btn:hover {
      background: #555555;
    }
    .table-wrapper {
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      -ms-overflow-style: none;
      scrollbar-width: none;
    }
    .table-wrapper::-webkit-scrollbar {
      display: none;
    }
    table {
      width: 100%;
      min-width: 600px;
      border-collapse: collapse;
      background: #ffffff;
      border-radius: 10px;
      border-spacing: 0;
    }
    thead {
      background: #333333;
    }
    th {
      color: white;
      padding: 12px;
      text-align: left;
      font-size: 0.9rem;
      border-bottom: 2px solid #ffffff;
      transition: background-color 0.3s, color 0.3s;
    }
    th:hover {
      background-color: #555555;
      color: #e0e0e0;
    }
    td {
      padding: 12px;
      text-align: left;
      font-size: 0.9rem;
      border-bottom: 1px solid #e6e9f0;
    }
    tr:last-child td {
      border-bottom: none;
    }
    tr:nth-child(even) {
      background: #f8f9fd;
    }
    tr {
      cursor: pointer;
    }
    tr:hover {
      background: #e9ecef;
    }
    .sidebar {
      width: 250px;
      background: linear-gradient(180deg, #2d3748, #1a2a44);
      border-radius: 15px;
      padding: 30px 20px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
      height: calc(100vh - 90px);
      overflow-y: auto; /* Enable scrolling functionality */
    }
    /* Hide scrollbar visually in WebKit browsers (Chrome, Safari) */
    .sidebar::-webkit-scrollbar {
      display: none; /* Completely hide the scrollbar */
    }
    /* Hide scrollbar in Firefox */
    .sidebar {
      scrollbar-width: none; /* Firefox */
    }
    /* Hide scrollbar in IE/Edge */
    .sidebar {
      -ms-overflow-style: none; /* IE and Edge */
    }
    .dashboard-btn {
      display: block;
      font-size: 1.5rem;
      color: #fff;
      background: linear-gradient(90deg, #4a5568, #2d3748);
      padding: 15px;
      border-radius: 10px;
      margin-bottom: 30px;
      text-align: center;
      position: relative;
      transition: all 0.3s ease;
      text-decoration: none;
    }
    .dashboard-btn::after {
      content: '';
      position: absolute;
      bottom: -10px;
      left: 50%;
      transform: translateX(-50%);
      width: 50%;
      height: 3px;
      background: linear-gradient(to right, transparent, #FFD700, transparent);
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(255, 215, 0, 0.8);
    }
    .dashboard-btn:hover {
      background: linear-gradient(90deg, #636e72, #4a5568);
      transform: scale(1.02);
    }
    .features {
      display: flex;
      flex-direction: column;
      gap: 10px;
    }
    .feature-item {
      display: flex;
      align-items: center;
      gap: 15px;
      padding: 12px 15px;
      border-radius: 8px;
      cursor: pointer;
      transition: all 0.3s ease;
      text-decoration: none;
      color: #e2e8f0;
      background: rgba(255, 255, 255, 0.1);
    }
    .feature-item:hover {
      background: linear-gradient(to right, #4a5568, #2d3748);
      color: #FFD700;
      transform: translateX(5px);
    }
    .feature-item.active {
      background: linear-gradient(to right, #FFD700, #d4b106);
      color: #2d3748;
      font-weight: bold;
    }
    .feature-icon {
      font-size: 1.4rem;
      width: 30px;
      text-align: center;
    }
    .feature-title {
      font-weight: 500;
      font-size: 1rem;
    }
    @media (max-width: 768px) {
      .container {
        flex-direction: column;
        padding: 0 10px !important;
      }
      .content-area {
        flex: none; /* Adjust for mobile */
        width: 100%; /* Full width on mobile */
        height: auto; /* Auto height on mobile like sidebar */
        padding: 15px;
      }
      .content-area h1 {
        font-size: 1.2rem;
      }
      .header-container {
        flex-direction: column;
        align-items: flex-start;
        gap: 10px;
      }
      .btn {
        margin-top: 5px;
        width: 100%;
        text-align: center;
        padding: 8px;
        font-size: 0.85rem;
        margin-left: 0;
      }
      table {
        display: block;
        min-width: 0;
      }
      thead {
        display: none;
      }
      tr {
        display: flex;
        flex-direction: column;
        margin-bottom: 15px;
        border: 1px solid #e6e9f0;
        border-radius: 5px;
        padding: 10px;
        background: #fff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }
      td {
        display: flex;
        justify-content: space-between;
        padding: 8px 0;
        font-size: 0.85rem;
        border-bottom: 1px dashed #e6e9f0;
      }
      td:last-child {
        border-bottom: none;
      }
      td:before {
        content: attr(data-label);
        font-weight: bold;
        color: #2d3436;
        margin-right: 10px;
        min-width: 100px;
      }
      .sidebar {
        width: 100%;
        height: auto;
        margin-bottom: 20px;
        border-radius: 15px;
        overflow-y: auto; /* Enable scrolling on mobile */
      }
      .sidebar::-webkit-scrollbar {
        display: none; /* Hide scrollbar on mobile */
      }
      .sidebar {
        scrollbar-width: none; /* Firefox */
        -ms-overflow-style: none; /* IE and Edge */
      }
    }
    @media (min-width: 769px) and (max-width: 1024px) {
      .content-area h1 {
        font-size: 1.3rem;
      }
      th, td {
        padding: 10px;
        font-size: 0.85rem;
      }
    }
  </style>
</head>
<body>
  <%- include('../../partials/navbar') %>
  <div class="container">
    <div class="sidebar">
      <a href="/admin/home" class="dashboard-btn">Admin Dashboard</a>
      <div class="features">
        <a href="/admin/sales" class="feature-item <%= activeRoute === 'sales' ? 'active' : '' %>">
          <span class="feature-icon">üí∞</span>
          <span class="feature-title">Sales</span>
        </a>
        <a href="/admin/orders" class="feature-item <%= activeRoute === 'orders' ? 'active' : '' %>">
          <span class="feature-icon">üìù</span>
          <span class="feature-title">Orders</span>
        </a>
        <a href="/admin/products" class="feature-item <%= activeRoute === 'products' ? 'active' : '' %>">
          <span class="feature-icon">üì¶</span>
          <span class="feature-title">Products</span>
        </a>
        <a href="/admin/stocks" class="feature-item <%= activeRoute === 'stocks' ? 'active' : '' %>">
          <span class="feature-icon">üè¨</span>
          <span class="feature-title">Inventory</span>
        </a>
        <a href="/admin/customers" class="feature-item <%= activeRoute === 'customers' ? 'active' : '' %>">
          <span class="feature-icon">üë§</span>
          <span class="feature-title">Customers</span>
        </a>
        <a href="/admin/employees" class="feature-item <%= activeRoute === 'employees' ? 'active' : '' %>">
          <span class="feature-icon">üë•</span>
          <span class="feature-title">Employees</span>
        </a>
        <a href="/admin/salaries" class="feature-item <%= activeRoute === 'salaries' ? 'active' : '' %>">
          <span class="feature-icon">üí∏</span>
          <span class="feature-title">Salaries</span>
        </a>
        <a href="/admin/profits" class="feature-item <%= activeRoute === 'profits' ? 'active' : '' %>">
          <span class="feature-icon">üìà</span>
          <span class="feature-title">Profits</span>
        </a>
        <a href="/admin/branches" class="feature-item <%= activeRoute === 'branches' ? 'active' : '' %>">
          <span class="feature-icon">üåê</span>
          <span class="feature-title">Branches</span>
        </a>
        <a href="/admin/company" class="feature-item <%= activeRoute === 'company' ? 'active' : '' %>">
          <span class="feature-icon">üè¢</span>
          <span class="feature-title">Company</span>
        </a>
        <a href="/admin/messages" class="feature-item <%= activeRoute === 'messages' ? 'active' : '' %>">
          <span class="feature-icon">‚úâ</span>
          <span class="feature-title">Messages</span>
        </a>
      </div>
    </div>
    <div class="content-area" id="content">
      <div class="header-container">
        <h1><%= isSentMessages ? 'Sent Messages' : 'Messages' %></h1>
        <div>
          <a href="/admin/messages/compose" class="btn">Compose</a>
          <a href="<%= isSentMessages ? '/admin/messages' : '/admin/sent-messages' %>" class="btn"><%= isSentMessages ? 'Received Messages' : 'Sent Messages' %></a>
        </div>
      </div>
      <div class="table-wrapper">
        <table>
          <thead>
            <tr>
              <% if (isSentMessages) { %>
                <th>To</th>
              <% } else { %>
                <th>From</th>
              <% } %>
              <th>Category</th>
              <th>Message</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody id="messages-table-body">
            <% messages.forEach(message => { %>
              <tr onclick="window.location='/admin/messages/view?from=<%= encodeURIComponent(message.from) %>&to=<%= encodeURIComponent(message.to) %>&category=<%= encodeURIComponent(message.category) %>&msg=<%= encodeURIComponent(message.message) %>√ótamp=<%= encodeURIComponent(message.timestamp.toISOString()) %>'">
                <% if (isSentMessages) { %>
                  <% if (message.to === "all_salesman" && message.branch_id) { %>
                    <td data-label="To"><%= `${message.to} (${message.branch_id})` %></td>
                  <% } else if (message.category === "company" && message.c_id) { %>
                    <td data-label="To"><%= `${message.c_id} - ${message.cname}` %></td>
                  <% } else if (message.category === "sales_manager" && message.emp_id) { %>
                    <td data-label="To"><%= `${message.emp_id} - ${message.employeeName}` %></td>
                  <% } else { %>
                    <td data-label="To"><%= message.to %></td>
                  <% } %>
                <% } else { %>
                  <td data-label="From"><%= message.from %></td>
                <% } %>
                <td data-label="Category"><%= message.category %></td>
                <td data-label="Message"><%= message.message %></td>
                <td data-label="Date"><%= message.timestamp.toLocaleString() %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <%- include('../../partials/footer') %>
  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();
    socket.on('newMessage', (message) => {
      const tbody = document.getElementById('messages-table-body');
      const tr = document.createElement('tr');
      tr.setAttribute('onclick', `window.location='/admin/messages/view?from=${encodeURIComponent(message.from)}&to=${encodeURIComponent(message.to)}&category=${encodeURIComponent(message.category)}&msg=${encodeURIComponent(message.message)}√ótamp=${encodeURIComponent(new Date(message.timestamp).toISOString())}'`);
      const isSentMessages = <%= isSentMessages ? 'true' : 'false' %>;
      let toContent = message.to;
      if (isSentMessages) {
        if (message.to === "all_salesman" && message.branch_id) {
          toContent = `${message.to} (${message.branch_id})`;
        } else if (message.category === "company" && message.c_id) {
          toContent = `${message.c_id} - ${message.cname || "Unknown"}`;
        } else if (message.category === "sales_manager" && message.emp_id) {
          toContent = `${message.emp_id} - ${message.employeeName || "Unknown"}`;
        }
      }
      tr.innerHTML = `
        ${isSentMessages ? `<td data-label="To">${toContent}</td>` : `<td data-label="From">${message.from}</td>`}
        <td data-label="Category">${message.category}</td>
        <td data-label="Message">${message.message}</td>
        <td data-label="Date">${new Date(message.timestamp).toLocaleString()}</td>
      `;
      tbody.insertBefore(tr, tbody.firstChild);
    });
  </script>
</body>
</html>