<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sales - <%= branchName %> - ElectroLand</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #f5f6fa;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .container {
      margin-top: 90px;
      display: flex;
      flex: 1;
      gap: 25px; /* Standardized gap */
      padding: 0 20px !important; /* Standardized padding with !important to prevent override */
      max-width: 100%; /* Ensure it doesnâ€™t exceed viewport */
    }

    .content-area {
      background: #ffffff;
      border-radius: 15px;
      padding: 20px; /* Standardized padding */
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08); /* Standardized shadow */
      flex: 1;
      overflow-x: auto; /* Horizontal scroll if needed */
      height: calc(100vh - 90px); /* Match sidebar height */
      overflow-y: auto; /* Enable vertical scrolling if content overflows */
    }

    /* Hide scrollbar visually in WebKit browsers (Chrome, Safari) */
    .content-area::-webkit-scrollbar {
      display: none;
    }

    /* Hide scrollbar in Firefox */
    .content-area {
      scrollbar-width: none;
    }

    /* Hide scrollbar in IE/Edge */
    .content-area {
      -ms-overflow-style: none;
    }

    .header-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px; /* Standardized margin */
      flex-wrap: wrap; /* Allow wrapping on small screens */
    }

    .header-container h1 {
      color: #2d3436;
      font-size: 1.5rem; /* Standardized font size */
    }

    .add-button {
      padding: 10px 20px;
      background: #333;
      color: white;
      border-radius: 5px;
      text-decoration: none;
      cursor: pointer;
      white-space: nowrap;
      transition: background-color 0.3s;
      font-size: 0.9rem;
    }

    .add-button:hover {
      background: #555;
    }

    .success-message {
      color: green;
      margin-bottom: 15px;
      text-align: center;
      display: none;
      font-size: 0.9rem;
    }

    .table-wrapper {
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      -ms-overflow-style: none; /* Hide scrollbar in IE/Edge */
      scrollbar-width: none; /* Hide scrollbar in Firefox */
    }

    .table-wrapper::-webkit-scrollbar {
      display: none; /* Hide scrollbar in Webkit browsers */
    }

    table {
      width: 100%;
      min-width: 600px; /* Standardized min-width */
      border-collapse: separate;
      border-spacing: 0;
      background: #ffffff;
      border-radius: 10px;
      border: 1px solid #ddd;
    }

    th, td {
      padding: 12px;
      text-align: center;
      font-size: 0.9rem;
      border: 1px solid #eaeaea;
      vertical-align: middle;
    }

    th {
      background: #333;
      color: white;
    }

    tr:nth-child(odd) {
      background: #f8f9fd;
    }

    tr:nth-child(even) {
      background: #eef2f7;
    }

    td {
      background: inherit;
      transition: background-color 0.2s ease-in-out;
    }

    td:hover {
      background-color: #f0f4f8;
      cursor: pointer;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
      .container {
        flex-direction: column;
        padding: 0 10px !important; /* Consistent responsive padding */
      }

      .content-area {
        padding: 15px;
        height: auto; /* Allow content area to expand on mobile */
      }

      .header-container {
        flex-direction: column;
        align-items: flex-start;
        gap: 10px;
      }

      .header-container h1 {
        font-size: 1.2rem;
      }

      .add-button {
        margin-top: 5px;
        width: 100%;
        text-align: center;
        padding: 8px;
        font-size: 0.85rem;
      }

      .success-message {
        font-size: 0.85rem;
      }

      table {
        display: block;
        min-width: 0;
      }

      thead {
        display: none;
      }

      tr {
        display: flex;
        flex-direction: column;
        margin-bottom: 15px;
        border: 1px solid #e6e9f0;
        border-radius: 5px;
        padding: 10px;
        background: #fff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }

      td {
        display: flex;
        justify-content: space-between;
        padding: 8px 0;
        font-size: 0.85rem;
        border-bottom: 1px dashed #e6e9f0;
        border: none;
      }

      td:last-child {
        border-bottom: none;
      }

      td:before {
        content: attr(data-label);
        font-weight: bold;
        color: #2d3436;
        margin-right: 10px;
        min-width: 100px;
      }
    }

    @media (min-width: 769px) and (max-width: 1024px) {
      .header-container h1 {
        font-size: 1.3rem;
      }

      th, td {
        padding: 10px;
        font-size: 0.85rem;
      }

      .add-button {
        padding: 8px 16px;
        font-size: 0.85rem;
      }
    }
  </style>
</head>
<body>
  <%- include('../../partials/navbar') %>
  <div class="container">
    <%- include('../../partials/salesman_sidebar') %>
    <div class="content-area" id="content">
      <div class="header-container">
        <h1>Sales - <%= branchName %></h1>
        <a href="/salesman/add-sale" class="add-button">Add Sale</a>
      </div>
      <div id="successMessage" class="success-message">Sale added successfully!</div>
      <div id="tableWrapper" class="table-wrapper">
        <table>
          <thead>
            <tr>
              <th>Sale ID</th>
              <th>Price</th>
              <th>Profit</th>
              <th>Sale Date</th>
            </tr>
          </thead>
          <tbody>
            <% salers.forEach(sale => { %>
              <tr onclick="window.location='/salesman/sales/<%= sale.sales_id %>'">
                <td data-label="Sale ID"><%= sale.sales_id %></td>
                <td data-label="Price">$<%= sale.total_amount.toFixed(2) %></td>
                <td data-label="Profit">$<%= sale.profit_or_loss.toFixed(2) %></td>
                <td data-label="Sale Date"><%= new Date(sale.saledate).toISOString().split('T')[0] %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <%- include('../../partials/footer') %>

  <script>
    // Show success message if redirected with success query
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('success') === 'true') {
      const successMessage = document.getElementById('successMessage');
      successMessage.style.display = 'block';
      setTimeout(() => {
        successMessage.style.display = 'none';
      }, 3000);
    }
  </script>
</body>
</html>