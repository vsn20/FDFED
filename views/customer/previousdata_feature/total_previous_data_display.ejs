<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View Sale - ElectroLand</title>
  <style>
    /* Reset and base styles */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #f5f6fa;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .container {
      margin-top: 90px;
      display: flex;
      flex: 1;
      gap: 25px;
      padding: 0 20px;
    }

    /* Content area with height and scroll */
    .content-area {
      background: #ffffff;
      border-radius: 15px;
      padding: 20px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      flex: 1;
      height: calc(100vh - 90px); /* Match sidebar height */
      overflow-y: hidden; /* Hide scrollbar by default */
      transition: overflow-y 0.1s ease;
    }

    .content-area:hover {
      overflow-y: auto; /* Show scrollbar on hover */
    }

    .content-area::-webkit-scrollbar {
      width: 8px;
    }

    .content-area::-webkit-scrollbar-track {
      background: transparent;
    }

    .content-area::-webkit-scrollbar-thumb {
      background: #4a5568;
      border-radius: 4px;
    }

    .content-area::-webkit-scrollbar-thumb:hover {
      background: #636e72;
    }

    .content-area h1 {
      color: #2d3436;
      margin-bottom: 20px;
      font-size: 1.5rem;
    }

    .content-area p {
      color: #636e72;
      line-height: 1.6;
      font-size: 0.9rem;
    }

    /* Form-specific styles */
    .form-section {
      margin-bottom: 20px;
      padding: 15px;
      border: 1px solid #e6e9f0;
      border-radius: 5px;
    }

    .section-title {
      color: #2d3436;
      font-size: 1.2rem;
      margin-bottom: 15px;
      font-weight: bold;
      padding: 0 10px;
    }

    .field-group {
      display: flex;
      flex-wrap: wrap;
      gap: 15px;
    }

    .field-group > div {
      flex: 1 1 45%;
      min-width: 200px;
    }

    .field-label {
      display: block;
      margin-bottom: 5px;
      color: #2d3436;
      font-weight: 500;
    }

    .field-input, .field-textarea {
      width: 100%;
      padding: 8px;
      border: 1px solid #e6e9f0;
      border-radius: 5px;
      font-size: 0.9rem;
      background: #f0f0f0;
      transition: border-color 0.3s;
    }

    .field-textarea {
      height: 100px;
      resize: vertical;
    }

    .field-input:focus, .field-textarea:focus {
      border-color: #333333;
      outline: none;
    }

    .disabled-field {
      background: #f0f0f0;
      cursor: not-allowed;
    }

    #loading {
      text-align: center;
      padding: 20px;
      color: #636e72;
    }

    #error {
      color: #e74c3c;
      text-align: center;
      padding: 20px;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
      .container {
        flex-direction: column;
        padding: 0 10px;
      }

      .content-area {
        padding: 15px;
        height: auto; /* Adjust for mobile */
        overflow-y: hidden;
      }

      .content-area:hover {
        overflow-y: auto;
      }

      .field-group > div {
        flex: 1 1 100%;
      }
    }
  </style>
</head>
<body>
  <%- include('../../partials/navbar') %>

  <div class="container">
    <%- include('../../partials/customer_sidebar') %>

    <!-- Content Area -->
    <div class="content-area" id="content">
      <h1>View Sale</h1>
      <div id="loading">Loading sale details...</div>
      <div id="error" style="display: none;"></div>
      <div id="sale-details" style="display: none;">
        <fieldset class="form-section">
          <legend class="section-title">Sale Information</legend>
          <div class="field-group" id="field-group">
            <!-- Fields populated via JS -->
          </div>
        </fieldset>
      </div>
    </div>
  </div>

  <%- include('../../partials/footer') %>

  <script>
    const saleId = '<%= saleId %>'; // Passed from controller
    const loading = document.getElementById('loading');
    const errorDiv = document.getElementById('error');
    const saleDetails = document.getElementById('sale-details');
    const fieldGroup = document.getElementById('field-group');

    async function loadSaleDetails() {
      try {
        const response = await fetch(`/customer/previouspurchases/totaldetails/data/${saleId}`);
        if (!response.ok) {
          const errorData = await response.json();
          throw new Error(errorData.message || 'Failed to fetch');
        }
        const sale = await response.json();
        fieldGroup.innerHTML = '';
        // Populate fields
        fieldGroup.innerHTML = `
          <div>
            <label class="field-label">Sale ID:</label>
            <input type="text" value="${sale.sale_id}" class="field-input disabled-field" readonly>
          </div>
          <div>
            <label class="field-label">Product ID:</label>
            <input type="text" value="${sale.prod_id}" class="field-input disabled-field" readonly>
          </div>
          <div>
            <label class="field-label">Product Name:</label>
            <input type="text" value="${sale.Prod_name}" class="field-input disabled-field" readonly>
          </div>
          <div>
            <label class="field-label">Company ID:</label>
            <input type="text" value="${sale.Com_id}" class="field-input disabled-field" readonly>
          </div>
          <div>
            <label class="field-label">Company Name:</label>
            <input type="text" value="${sale.com_name}" class="field-input disabled-field" readonly>
          </div>
          <div>
            <label class="field-label">Model No:</label>
            <input type="text" value="${sale.Model_no}" class="field-input disabled-field" readonly>
          </div>
          <div>
            <label class="field-label">Branch Name:</label>
            <input type="text" value="${sale.branch_name}" class="field-input disabled-field" readonly>
          </div>
          <div>
            <label class="field-label">Warranty Period:</label>
            <input type="text" value="${sale.warrantyperiod}" class="field-input disabled-field" readonly>
          </div>
          <div>
            <label class="field-label">Purchase Date:</label>
            <input type="text" value="${sale.purchasedate}" class="field-input disabled-field" readonly>
          </div>
          <div>
            <label class="field-label">Customer Name:</label>
            <input type="text" value="${sale.customer_name}" class="field-input disabled-field" readonly>
          </div>
          <div>
            <label class="field-label">Phone Number:</label>
            <input type="text" value="${sale.phone_number}" class="field-input disabled-field" readonly>
          </div>
          <div>
            <label class="field-label">Address:</label>
            <input type="text" value="${sale.address || 'N/A'}" class="field-input disabled-field" readonly>
          </div>
          <div>
            <label class="field-label">Unique Code:</label>
            <input type="text" value="${sale.unique_code}" class="field-input disabled-field" readonly>
          </div>
          <div>
            <label class="field-label">Sold Price:</label>
            <input type="text" value="${sale.price}" class="field-input disabled-field" readonly>
          </div>
          <div>
            <label class="field-label">Quantity:</label>
            <input type="text" value="${sale.quantity}" class="field-input disabled-field" readonly>
          </div>
          <div>
            <label class="field-label">Total Amount:</label>
            <input type="text" value="${sale.amount}" class="field-input disabled-field" readonly>
          </div>
          <div>
            <label class="field-label">Installation:</label>
            <input type="text" value="${sale.installation}" class="field-input disabled-field" readonly>
          </div>
          <div>
            <label class="field-label">Installation Type:</label>
            <input type="text" value="${sale.installationType || 'N/A'}" class="field-input disabled-field" readonly>
          </div>
          <div>
            <label class="field-label">Installation Charge:</label>
            <input type="text" value="${sale.installationcharge || 'N/A'}" class="field-input disabled-field" readonly>
          </div>
          <div>
            <label class="field-label">Installation Status:</label>
            <input type="text" value="${sale.installation_status}" class="field-input disabled-field" readonly>
          </div>
          <div>
            <label class="field-label">Product Description:</label>
            <textarea class="field-textarea disabled-field" readonly>${sale.prod_description}</textarea>
          </div>
        `;
        loading.style.display = 'none';
        saleDetails.style.display = 'block';
      } catch (error) {
        console.error('Error loading sale details:', error);
        loading.style.display = 'none';
        errorDiv.textContent = error.message === 'Sale not found' 
          ? 'Sale not found.' 
          : 'Error loading sale details. Please refresh.';
        errorDiv.style.display = 'block';
      }
    }

    // Initial load
    loadSaleDetails();
  </script>
</body>
</html>