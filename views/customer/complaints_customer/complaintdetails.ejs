<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View Complaint - ElectroLand</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #f5f6fa;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .container {
      margin-top: 90px;
      display: flex;
      flex: 1;
      gap: 25px;
      padding: 0 20px;
    }

    .content-area {
      background: #ffffff;
      border-radius: 15px;
      padding: 20px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      flex: 1;
      height: calc(100vh - 90px);
      overflow-y: hidden;
      transition: overflow-y 0.1s ease;
    }

    .content-area:hover {
      overflow-y: auto;
    }

    .content-area::-webkit-scrollbar {
      width: 8px;
    }

    .content-area::-webkit-scrollbar-track {
      background: transparent;
    }

    .content-area::-webkit-scrollbar-thumb {
      background: #4a5568;
      border-radius: 4px;
    }

    .content-area::-webkit-scrollbar-thumb:hover {
      background: #636e72;
    }

    .content-area h1 {
      color: #2d3436;
      margin-bottom: 20px;
      font-size: 1.5rem;
    }

    .content-area p {
      color: #636e72;
      line-height: 1.6;
      font-size: 0.9rem;
    }

    .form-section {
      margin-bottom: 20px;
      padding: 15px;
      border: 1px solid #e6e9f0;
      border-radius: 5px;
    }

    .section-title {
      color: #2d3436;
      font-size: 1.2rem;
      margin-bottom: 15px;
      font-weight: bold;
    }

    .field-group {
      display: flex;
      flex-wrap: wrap;
      gap: 15px;
    }

    .field-group > div {
      flex: 1 1 45%;
      min-width: 200px;
    }

    .field-label {
      display: block;
      margin-bottom: 5px;
      color: #2d3436;
      font-weight: 500;
    }

    .field-input, .field-textarea {
      width: 100%;
      padding: 8px;
      border: 1px solid #e6e9f0;
      border-radius: 5px;
      font-size: 0.9rem;
      background: #f0f0f0;
    }

    .field-textarea {
      height: 100px;
      resize: vertical;
    }

    .disabled-field {
      background: #f0f0f0;
      cursor: not-allowed;
    }

    @media (max-width: 768px) {
      .container {
        flex-direction: column;
        padding: 0 10px;
      }

      .content-area {
        padding: 15px;
        height: auto;
        overflow-y: hidden;
      }

      .content-area:hover {
        overflow-y: auto;
      }

      .field-group > div {
        flex: 1 1 100%;
      }
    }
  </style>
</head>
<body>
  <%- include('../../partials/navbar') %>
  <div class="container">
    <%- include('../../partials/customer_sidebar') %>
    <div class="content-area" id="content">
      <h1>View Complaint</h1>
      <div id="complaint-details">
        <p>Loading complaint details...</p>
      </div>
    </div>
  </div>
  <%- include('../../partials/footer') %>

  <script>
    async function loadComplaintDetails() {
      const complaintId = window.location.pathname.split('/').pop();
      try {
        const response = await fetch(`/customer/complaints/totaldetails/${complaintId}`);
        const complaint = await response.json();

        if (response.ok && !complaint.error) {
          const content = document.getElementById('complaint-details');
          content.innerHTML = `
            <fieldset class="form-section">
              <legend class="section-title">Complaint Information</legend>
              <div class="field-group">
                <div>
                  <label class="field-label">Complaint ID:</label>
                  <input type="text" value="${complaint.complaint_id}" class="field-input disabled-field" readonly>
                </div>
                <div>
                  <label class="field-label">Sale ID:</label>
                  <input type="text" value="${complaint.sale_id}" class="field-input disabled-field" readonly>
                </div>
                <div>
                  <label class="field-label">Product Name:</label>
                  <input type="text" value="${complaint.Prod_name}" class="field-input disabled-field" readonly>
                </div>
                <div>
                  <label class="field-label">Company Name:</label>
                  <input type="text" value="${complaint.com_name}" class="field-input disabled-field" readonly>
                </div>
                <div>
                  <label class="field-label">Purchase Date:</label>
                  <input type="text" value="${complaint.purchasedate}" class="field-input disabled-field" readonly>
                </div>
                <div>
                  <label class="field-label">Complaint Date:</label>
                  <input type="text" value="${complaint.complaint_date}" class="field-input disabled-field" readonly>
                </div>
                <div>
                  <label class="field-label">Status:</label>
                  <input type="text" value="${complaint.status}" class="field-input disabled-field" readonly>
                </div>
                <div>
                  <label class="field-label">Complaint Description:</label>
                  <textarea class="field-textarea disabled-field" readonly>${complaint.complaint_info}</textarea>
                </div>
                <div>
                  <label class="field-label">Product Description:</label>
                  <textarea class="field-textarea disabled-field" readonly>${complaint.prod_description}</textarea>
                </div>
                <div>
                  <label class="field-label">Warranty Period:</label>
                  <input type="text" value="${complaint.warrantyperiod}" class="field-input disabled-field" readonly>
                </div>
                <div>
                  <label class="field-label">Installation:</label>
                  <input type="text" value="${complaint.installation}" class="field-input disabled-field" readonly>
                </div>
                <div>
                  <label class="field-label">Price:</label>
                  <input type="text" value="${complaint.price}" class="field-input disabled-field" readonly>
                </div>
              </div>
            </fieldset>
            ${complaint.status === 'Open' ? `<a href="/customer/complaints/edit/${complaint.complaint_id}" class="form-btn">Edit Complaint</a>` : ''}
          `;
        } else {
          document.getElementById('complaint-details').innerHTML = '<p>Complaint not found.</p>';
        }
      } catch (error) {
        console.error('Error loading complaint:', error);
        document.getElementById('complaint-details').innerHTML = '<p>Error loading complaint details.</p>';
      }
    }

    window.onload = loadComplaintDetails;
  </script>
</body>
</html>