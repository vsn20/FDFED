<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Complaints - ElectroLand</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #f5f6fa;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .container {
      margin-top: 90px;
      display: flex;
      flex: 1;
      gap: 25px;
      padding: 0 20px;
    }

    .content-area {
      background: #ffffff;
      border-radius: 15px;
      padding: 20px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      flex: 1;
      height: calc(100vh - 90px);
      overflow-y: hidden;
      transition: overflow-y 0.1s ease;
    }

    .content-area:hover {
      overflow-y: auto;
    }

    .content-area::-webkit-scrollbar {
      width: 8px;
    }

    .content-area::-webkit-scrollbar-track {
      background: transparent;
    }

    .content-area::-webkit-scrollbar-thumb {
      background: #4a5568;
      border-radius: 4px;
    }

    .content-area::-webkit-scrollbar-thumb:hover {
      background: #636e72;
    }

    .content-area h1 {
      color: #2d3436;
      margin-bottom: 20px;
      font-size: 1.5rem;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }

    th, td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid #e6e9f0;
    }

    th {
      background-color: #f0f0f0;
      color: #2d3436;
      font-weight: 600;
    }

    td {
      color: #636e72;
    }

    .clickable-btn {
      background: none;
      border: none;
      color: #333333;
      text-decoration: underline;
      cursor: pointer;
      font-size: 0.9rem;
    }

    .clickable-btn:hover {
      color: #555555;
    }

    .add-btn {
      display: inline-block;
      padding: 10px 20px;
      background-color: #333333;
      color: white;
      border: none;
      border-radius: 5px;
      font-size: 0.9rem;
      cursor: pointer;
      text-decoration: none;
      margin-bottom: 20px;
    }

    .add-btn:hover {
      background-color: #555555;
    }

    @media (max-width: 768px) {
      .container {
        flex-direction: column;
        padding: 0 10px;
      }

      .content-area {
        padding: 15px;
        height: auto;
        overflow-y: hidden;
      }

      .content-area:hover {
        overflow-y: auto;
      }

      table, thead, tbody, th, td, tr {
        display: block;
      }

      thead {
        display: none;
      }

      tr {
        margin-bottom: 15px;
        border: 1px solid #e6e9f0;
        border-radius: 5px;
        padding: 10px;
      }

      td {
        display: flex;
        justify-content: space-between;
        padding: 8px;
        position: relative;
      }

      td:before {
        content: attr(data-label);
        font-weight: bold;
        color: #2d3436;
        flex: 1;
      }

      td:last-child {
        border-bottom: none;
      }

      .add-btn {
        width: 100%;
        padding: 8px;
      }
    }
  </style>
</head>
<body>
  <%- include('../../partials/navbar') %>
  <div class="container">
    <%- include('../../partials/customer_sidebar') %>
    <div class="content-area">
      <h1>Complaints</h1>
      <a href="/customer/complaints/add" class="add-btn">Add New Complaint</a>
      <table>
        <thead>
          <tr>
            <th>Complaint ID</th>
            <th>Sale ID</th>
            <th>Product Name</th>
            <th>Company Name</th>
            <th>Purchase Date</th>
            <th>Complaint Date</th>
            <th>Status</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody id="complaints-table">
          <tr>
            <td colspan="8">Loading complaints...</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <%- include('../../partials/footer') %>

  <script>
    async function loadComplaints() {
      try {
        const response = await fetch('/customer/complaints/data');
        const complaints = await response.json();

        if (response.ok && Array.isArray(complaints)) {
          const tableBody = document.getElementById('complaints-table');
          if (complaints.length === 0) {
            tableBody.innerHTML = '<tr><td colspan="8">No complaints found.</td></tr>';
            return;
          }

          tableBody.innerHTML = complaints.map(complaint => `
            <tr>
              <td data-label="Complaint ID">
                <button class="clickable-btn" onclick="window.location.href='/customer/complaints/totaldetails/${complaint.complaint_id}'">
                  ${complaint.complaint_id}
                </button>
              </td>
              <td data-label="Sale ID">${complaint.sale_id}</td>
              <td data-label="Product Name">${complaint.Prod_name}</td>
              <td data-label="Company Name">${complaint.com_name}</td>
              <td data-label="Purchase Date">${complaint.purchasedate}</td>
              <td data-label="Complaint Date">${complaint.complaint_date}</td>
              <td data-label="Status">${complaint.status}</td>
              <td data-label="Description">${complaint.complaint_info}</td>
            </tr>
          `).join('');
        } else {
          document.getElementById('complaints-table').innerHTML = '<tr><td colspan="8">Error loading complaints.</td></tr>';
        }
      } catch (error) {
        console.error('Error loading complaints:', error);
        document.getElementById('complaints-table').innerHTML = '<tr><td colspan="8">Error loading complaints.</td></tr>';
      }
    }

    window.onload = loadComplaints;
  </script>
</body>
</html>