<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Details - ElectroLand</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    body {
      background: #f5f6fa;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    .container {
      margin-top: 90px;
      display: flex;
      flex: 1;
      gap: 25px;
      padding: 0 20px !important;
      max-width: 100%;
    }
    .content-area {
      background: #ffffff;
      border-radius: 15px;
      padding: 20px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      flex: 1;
    }
    .content-area h1 {
      color: #2d3436;
      margin-bottom: 20px;
      font-size: 1.5rem;
    }
    .detail-row {
      margin-bottom: 15px;
      font-size: 0.9rem;
    }
    .detail-row label {
      font-weight: bold;
      color: #2d3436;
      display: inline-block;
      width: 150px;
    }
    #loading {
      text-align: center;
      padding: 20px;
      color: #636e72;
    }
    #order-details {
      display: none;
    }
    @media (max-width: 768px) {
      .container {
        flex-direction: column;
        padding: 0 10px !important;
      }
      .content-area {
        padding: 15px;
      }
      .detail-row label {
        width: 100px;
      }
    }
  </style>
</head>
<body>
  <%- include('../../partials/navbar') %>
  <div class="container">
    <%- include('../../partials/salesmanager_sidebar') %>
    <div class="content-area">
      <h1>Order Details</h1>
      <div id="loading">Loading order details...</div>
      <div id="order-details">
        <div class="detail-row">
          <label>Order ID:</label>
          <span id="order_id"></span>
        </div>
        <div class="detail-row">
          <label>Branch:</label>
          <span id="branch_name"></span>
        </div>
        <div class="detail-row">
          <label>Company:</label>
          <span id="company_name"></span>
        </div>
        <div class="detail-row">
          <label>Product:</label>
          <span id="product_name"></span>
        </div>
        <div class="detail-row">
          <label>Quantity:</label>
          <span id="quantity"></span>
        </div>
        <div class="detail-row">
          <label>Ordered Date:</label>
          <span id="ordered_date"></span>
        </div>
        <div class="detail-row">
          <label>Delivery Date:</label>
          <span id="delivery_date"></span>
        </div>
        <div class="detail-row">
          <label>Status:</label>
          <span id="status"></span>
        </div>
        <div class="detail-row">
          <label>Installation Type:</label>
          <span id="installation_type"></span>
        </div>
      </div>
    </div>
  </div>
  <%- include('../../partials/footer') %>

  <script>
    const orderDetails = document.getElementById('order-details');
    const loading = document.getElementById('loading');

    async function loadOrderDetails() {
      try {
        const response = await fetch(`/salesmanager/orders/data/<%= order_id %>`);
        if (!response.ok) throw new Error('Failed to fetch order details');
        const order = await response.json();
        document.getElementById('order_id').textContent = order.order_id;
        document.getElementById('branch_name').textContent = order.branch_name;
        document.getElementById('company_name').textContent = order.company_name;
        document.getElementById('product_name').textContent = order.product_name;
        document.getElementById('quantity').textContent = order.quantity;
        document.getElementById('ordered_date').textContent = new Date(order.ordered_date).toLocaleDateString();
        document.getElementById('delivery_date').textContent = order.delivery_date ? new Date(order.delivery_date).toLocaleDateString() : 'Not Set';
        document.getElementById('status').textContent = order.status;
        document.getElementById('installation_type').textContent = order.installation_type;
        loading.style.display = 'none';
        orderDetails.style.display = 'block';
      } catch (error) {
        console.error('Error loading order details:', error);
        loading.textContent = 'Error loading order details. Please refresh.';
      }
    }

    // Initial load
    loadOrderDetails();
  </script>
</body>
</html>