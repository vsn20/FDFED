<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sale Details - ElectroLand</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #f5f6fa;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .container {
      margin-top: 90px;
      display: flex;
      flex: 1;
      gap: 25px;
      padding: 0 20px;
    }

    .content-area {
      background: #ffffff;
      border-radius: 15px;
      padding: 25px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      flex: 1;
      overflow-y: auto; /* Enable scrolling functionality */
      height: calc(100vh - 90px); /* Match sidebar height */
    }

    /* Hide scrollbar visually in WebKit browsers (Chrome, Safari) */
    .content-area::-webkit-scrollbar {
      display: none; /* Completely hide the scrollbar */
    }

    /* Hide scrollbar in Firefox */
    .content-area {
      scrollbar-width: none; /* Firefox */
    }

    /* Hide scrollbar in IE/Edge */
    .content-area {
      -ms-overflow-style: none; /* IE and Edge */
    }

    h2 {
      color: #2d3436;
      margin-bottom: 20px;
      font-size: 1.5rem;
    }

    h3 {
      color: #2d3436;
      margin: 20px 0 10px;
      font-size: 1.2rem;
    }

    .form-group {
      margin-bottom: 15px;
    }

    .form-group label {
      display: block;
      margin-bottom: 5px;
      color: #2d3436;
      font-weight: 500;
      font-size: 0.9rem;
    }

    .form-group input {
      width: 100%;
      padding: 8px;
      border: 1px solid #e6e9f0;
      border-radius: 5px;
      font-size: 0.9rem;
      background: #f8f9fa;
      color: #2d3436;
    }

    .form-group input[readonly] {
      background: #e9ecef;
      cursor: default;
    }

    .form-row {
      display: flex;
      gap: 15px;
      flex-wrap: wrap;
    }

    .form-row .form-group {
      flex: 1 1 45%;
      min-width: 200px;
      max-width: 400px;
    }

    .back-link {
      display: block;
      margin-top: 15px;
      color: #2d3436;
      text-decoration: none;
      text-align: center;
      font-size: 0.9rem;
      padding: 10px 20px;
      background: #333333;
      color: white;
      border-radius: 5px;
      transition: background-color 0.3s;
    }

    .back-link:hover {
      background: #555555;
    }

    #loading {
      text-align: center;
      padding: 20px;
      color: #636e72;
    }

    @media (max-width: 768px) {
      .container {
        flex-direction: column;
        padding: 0 20px;
      }

      .content-area {
        min-height: auto;
        padding: 15px;
        overflow-y: auto; /* Enable scrolling on mobile */
      }

      .content-area::-webkit-scrollbar {
        display: none; /* Hide scrollbar on mobile */
      }

      .content-area {
        scrollbar-width: none; /* Firefox */
        -ms-overflow-style: none; /* IE and Edge */
      }

      h2 {
        font-size: 1.2rem;
      }

      h3 {
        font-size: 1rem;
      }

      .form-row {
        flex-direction: column;
      }

      .form-row .form-group {
        flex: 1 1 100%;
        max-width: 100%;
      }

      .form-group input {
        font-size: 0.85rem;
      }

      .back-link {
        width: 100%;
        padding: 10px;
        font-size: 0.85rem;
      }
    }

    @media (min-width: 769px) and (max-width: 1024px) {
      h2 {
        font-size: 1.3rem;
      }

      h3 {
        font-size: 1.1rem;
      }

      .form-row .form-group {
        flex: 1 1 45%;
      }

      .form-group input {
        font-size: 0.85rem;
      }

      .back-link {
        padding: 8px 16px;
        font-size: 0.85rem;
      }
    }
  </style>
</head>
<body>
  <%- include('../../partials/navbar') %>

  <div class="container">
    <%- include('../../partials/salesmanager_sidebar') %>

    <div class="content-area" id="content">
      <h2>Sale Details</h2>

      <div id="loading">Loading sale details...</div>

      <div id="sale-details-container" style="display: none;">
        <h3>Sale Information</h3>
        <div class="form-row">
          <div class="form-group">
            <label>Sale ID</label>
            <input type="text" id="saleId" readonly>
          </div>
          <div class="form-group">
            <label>Unique Code</label>
            <input type="text" id="uniqueCode" readonly>
          </div>
          <div class="form-group">
            <label>Sale Date</label>
            <input type="text" id="saleDate" readonly>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group">
            <label>Salesman Name</label>
            <input type="text" id="salesmanName" readonly>
          </div>
          <div class="form-group">
            <label>Customer Name</label>
            <input type="text" id="customerName" readonly>
          </div>
          <div class="form-group">
            <label>Branch Name</label>
            <input type="text" id="branchName" readonly>
          </div>
        </div>

        <h3>Product Information</h3>
        <div class="form-row">
          <div class="form-group">
            <label>Product Name</label>
            <input type="text" id="productName" readonly>
          </div>
          <div class="form-group">
            <label>Model Number</label>
            <input type="text" id="modelNumber" readonly>
          </div>
          <div class="form-group">
            <label>Company Name</label>
            <input type="text" id="companyName" readonly>
          </div>
        </div>

        <h3>Transaction Details</h3>
        <div class="form-row">
          <div class="form-group">
            <label>Purchased Price</label>
            <input type="text" id="purchasedPrice" readonly>
          </div>
          <div class="form-group">
            <label>Sold Price</label>
            <input type="text" id="soldPrice" readonly>
          </div>
          <div class="form-group">
            <label>Quantity</label>
            <input type="text" id="quantity" readonly>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group">
            <label>Profit/Loss</label>
            <input type="text" id="profitLoss" readonly>
          </div>
          <div class="form-group">
            <label>Phone Number</label>
            <input type="tel" id="phoneNumber" readonly>
          </div>
        </div>
      </div>

      <a href="/salesmanager/sales" class="back-link">Back to Sales</a>
    </div>
  </div>

  <%- include('../../partials/footer') %>

  <script>
    const salesId = '<%= sales_id %>';
    const loading = document.getElementById('loading');
    const detailsContainer = document.getElementById('sale-details-container');

    async function loadSaleDetails() {
      try {
        const response = await fetch(`/salesmanager/sales/data/${salesId}`);
        if (!response.ok) throw new Error('Failed to fetch');
        const sale = await response.json();

        document.getElementById('saleId').value = sale.sales_id;
        document.getElementById('uniqueCode').value = sale.unique_code;
        document.getElementById('saleDate').value = new Date(sale.saledate).toISOString().split('T')[0];
        document.getElementById('salesmanName').value = sale.salesman_name;
        document.getElementById('customerName').value = sale.customer_name;
        document.getElementById('branchName').value = sale.branch_name;
        document.getElementById('productName').value = sale.product_name;
        document.getElementById('modelNumber').value = sale.model_number;
        document.getElementById('companyName').value = sale.company_name;
        document.getElementById('purchasedPrice').value = `$${sale.purchased_price.toFixed(2)}`;
        document.getElementById('soldPrice').value = `$${sale.price.toFixed(2)}`;
        document.getElementById('quantity').value = sale.quantity;
        document.getElementById('profitLoss').value = `$${sale.profit_or_loss.toFixed(2)}`;
        document.getElementById('phoneNumber').value = sale.phone_number || 'N/A';

        loading.style.display = 'none';
        detailsContainer.style.display = 'block';
      } catch (error) {
        console.error('Error loading sale details:', error);
        loading.textContent = 'Error loading sale details. Please refresh.';
      }
    }

    // Initial load
    loadSaleDetails();
  </script>
</body>
</html>