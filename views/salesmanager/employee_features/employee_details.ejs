<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Employee Details - ElectroLand</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #f5f6fa;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .container {
      margin-top: 90px;
      display: flex;
      flex: 1;
      gap: 25px;
      padding: 0 20px;
      max-width: 100%;
    }

    .content-area {
      background: #ffffff;
      border-radius: 15px;
      padding: 25px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      flex: 1;
    }

    .content-area h1 {
      color: #2d3436;
      margin-bottom: 20px;
    }

    fieldset {
      border: 1px solid #ddd;
      border-radius: 5px;
      padding: 15px;
      margin-bottom: 20px;
    }

    legend {
      padding: 0 10px;
      font-weight: bold;
    }

    .field-group {
      display: flex;
      flex-wrap: wrap;
      gap: 15px;
    }

    .field-group div {
      flex: 1;
      min-width: 200px;
    }

    label {
      display: block;
      margin-bottom: 5px;
      color: #2d3436;
    }

    input[readonly], textarea[readonly] {
      width: 100%;
      padding: 8px;
      border: 1px solid #ddd;
      border-radius: 4px;
      background-color: #e9ecef;
      cursor: not-allowed;
    }

    input:not([readonly]) {
      width: 100%;
      padding: 8px;
      border: 1px solid #ddd;
      border-radius: 4px;
      background-color: #ffffff;
    }

    .fire-button, .edit-button, .submit-button, .cancel-button {
      display: inline-block;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      margin-top: 20px;
      cursor: pointer;
      color: white;
    }

    .fire-button {
      background-color: #dc3545;
      margin-left: 10px;
    }

    .fire-button:hover {
      background-color: #c82333;
    }

    .edit-button {
      background-color: #4CAF50;
      margin-left: 10px;
    }

    .edit-button:hover {
      background-color: #45a049;
    }

    .submit-button {
      background-color: #008CBA;
      margin-left: 10px;
    }

    .submit-button:hover {
      background-color: #007bb5;
    }

    .cancel-button {
      background-color: #6c757d;
      margin-left: 10px;
    }

    .cancel-button:hover {
      background-color: #5a6268;
    }

    .back-button {
      display: inline-block;
      padding: 10px 20px;
      background-color: #6c757d;
      color: white;
      text-decoration: none;
      border-radius: 5px;
      margin-top: 20px;
      margin-right: 10px;
    }

    .back-button:hover {
      background-color: #5a6268;
    }

    .success-message {
      background-color: #dff0d8;
      color: #3c763d;
      padding: 10px;
      margin-bottom: 15px;
      border-radius: 5px;
      text-align: center;
    }

    @media (max-width: 768px) {
      .container {
        flex-direction: column;
        padding: 0 20px;
      }

      .field-group {
        flex-direction: column;
      }
    }
  </style>
</head>
<body>
  <%- include('../../partials/navbar') %>

  <div class="container">
    <%- include('../../partials/salesmanager_sidebar') %>

    <div class="content-area" id="content">
      <h1>Employee Details</h1>
      <% if (error) { %>
        <p style="color: red;"><%= error %></p>
      <% } else if (employee) { %>
        <% if (message) { %>
          <div class="success-message"><%= message %></div>
        <% } %>
        <div id="employeeForm">
          <fieldset>
            <legend>Personal Details</legend>
            <div class="field-group">
              <div><label for="e_id">Employee ID</label><input type="text" id="e_id" value="<%= employee.e_id %>" readonly></div>
              <div><label for="f_name">First Name</label><input type="text" id="f_name" value="<%= employee.f_name %>" readonly></div>
              <div><label for="last_name">Last Name</label><input type="text" id="last_name" value="<%= employee.last_name %>" readonly></div>
              <div><label for="role">Role</label><input type="text" id="role" value="<%= employee.role %>" readonly></div>
              <div><label for="bid">Branch</label><input type="text" id="bid" value="<%= employee.bid || 'Not Assigned' %>" readonly></div>
              <div><label for="status">Status</label><input type="text" id="status" value="<%= employee.status %>" readonly></div>
              <div><label for="email">Email</label><input type="email" id="email" value="<%= employee.email %>" readonly></div>
              <div><label for="phone_no">Phone Number</label><input type="tel" id="phone_no" value="<%= employee.phone_no || 'N/A' %>" readonly></div>
            </div>
          </fieldset>

          <fieldset>
            <legend>Account and Salaries</legend>
            <div class="field-group">
              <div><label for="acno">Account Number</label><input type="text" id="acno" value="<%= employee.acno %>" readonly></div>
              <div><label for="ifsc">IFSC Code</label><input type="text" id="ifsc" value="<%= employee.ifsc %>" readonly></div>
              <div><label for="bankname">Bank Name</label><input type="text" id="bankname" value="<%= employee.bankname %>" readonly></div>
              <div><label for="base_salary">Monthly Salary</label><input type="number" id="base_salary" value="<%= employee.base_salary %>" readonly></div>
              <div><label for="address">Address</label><textarea id="address" readonly><%= employee.address || 'N/A' %></textarea></div>
            </div>
          </fieldset>

          <fieldset>
            <legend>Additional Details</legend>
            <div class="field-group">
              <div><label for="createdBy">Created By</label><input type="text" id="createdBy" value="<%= employee.createdBy %>" readonly></div>
              <div><label for="hiredAt">Hired At</label><input type="text" id="hiredAt" value="<%= employee.hiredAt %>" readonly></div>
              <div><label for="fired_date">Fired Date</label><input type="text" id="fired_date" value="<%= employee.fired_date || 'N/A' %>" readonly></div>
              <div><label for="reason_for_exit">Reason for Exit</label><input type="text" id="reason_for_exit" value="<%= employee.reason_for_exit || 'N/A' %>" readonly></div>
            </div>
          </fieldset>

          <a href="/salesmanager/employees" class="back-button">Back to List</a>
          <% if (employee.status === 'active') { %>
            <button type="button" id="editButton" class="edit-button">Edit Salary</button>
            <button type="button" id="fireButton" class="fire-button">Fire Employee</button>
            <div id="fireForm" style="display:none;">
              <label for="reason_for_exit">Reason for Exit:</label>
              <input type="text" id="reason_for_exit" required>
              <button type="button" class="submit-button" onclick="fireEmployee('<%= employee.e_id %>')">Submit</button>
              <button type="button" class="cancel-button" onclick="document.getElementById('fireForm').style.display='none';">Cancel</button>
            </div>
          <% } %>
        </div>
      <% } %>

      <div id="error-message" style="color: red;"></div>
      <div id="success-message" class="success-message" style="display: none;"></div>

      <script>
        const editButton = document.getElementById('editButton');
        const fireButton = document.getElementById('fireButton');
        const salaryInput = document.getElementById('base_salary');
        const errorMessage = document.getElementById('error-message');
        const successMessage = document.getElementById('success-message');

        if (editButton) {
          editButton.addEventListener('click', () => {
            salaryInput.readOnly = false;
            editButton.style.display = 'none';

            const submitButton = document.createElement('button');
            submitButton.type = 'button';
            submitButton.className = 'submit-button';
            submitButton.textContent = 'Submit';
            submitButton.onclick = () => updateSalary('<%= employee.e_id %>');
            document.getElementById('employeeForm').appendChild(submitButton);
          });
        }

        if (fireButton) {
          fireButton.addEventListener('click', () => {
            document.getElementById('fireForm').style.display = 'block';
            fireButton.style.display = 'none';
          });
        }

        async function updateSalary(employeeId) {
          const salaryValue = parseFloat(salaryInput.value);
          errorMessage.textContent = '';
          successMessage.style.display = 'none';

          if (isNaN(salaryValue) || salaryValue < 0) {
            errorMessage.textContent = 'Monthly salary must be a non-negative number.';
            return;
          }

          try {
            const response = await fetch(`/salesmanager/employee/update-salary/${employeeId}`, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify({ base_salary: salaryValue }),
            });

            const result = await response.json();

            if (result.error) {
              errorMessage.textContent = result.error;
            } else {
              successMessage.textContent = 'Salary updated successfully';
              successMessage.style.display = 'block';
              salaryInput.readOnly = true;
              document.querySelector('.submit-button').remove();
              editButton.style.display = 'inline-block';
            }
          } catch (error) {
            errorMessage.textContent = 'Network error: ' + error.message;
          }
        }

        async function fireEmployee(employeeId) {
          const reasonInput = document.getElementById('reason_for_exit');
          const reason = reasonInput.value.trim();
          errorMessage.textContent = '';
          successMessage.style.display = 'none';

          if (!reason) {
            errorMessage.textContent = 'Reason for exit is required';
            return;
          }

          if (!confirm('Are you sure you want to fire this employee?')) {
            return;
          }

          try {
            const response = await fetch(`/salesmanager/employee/fire/${employeeId}`, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify({ reason_for_exit: reason }),
            });

            const result = await response.json();

            if (result.error) {
              errorMessage.textContent = result.error;
            } else {
              window.location.href = '/salesmanager/employees?message=Employee fired successfully';
            }
          } catch (error) {
            errorMessage.textContent = 'Network error: ' + error.message;
          }
        }
      </script>
    </div>
  </div>

  <%- include('../../partials/footer') %>
</body>
</html>