<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sale Details - ElectroLand</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #f5f6fa;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .container {
      margin-top: 90px;
      display: flex;
      flex: 1;
      gap: 25px;
      padding: 0 20px !important;
      max-width: 100%;
    }

    .content-area {
      background: #ffffff;
      border-radius: 15px;
      padding: 20px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      flex: 1;
      overflow-x: auto;
      overflow-y: auto;
      height: calc(100vh - 90px);
    }

    h2 {
      color: #2d3436;
      margin-bottom: 20px;
      font-size: 1.5rem;
    }

    h3 {
      color: #2d3436;
      margin: 20px 0 10px;
      font-size: 1.2rem;
    }

    .form-group {
      margin-bottom: 15px;
    }

    .form-group label {
      display: block;
      margin-bottom: 5px;
      color: #2d3436;
      font-weight: 500;
    }

    .form-group input,
    .form-group select,
    .form-group textarea {
      width: 100%;
      padding: 8px;
      border: 1px solid #e6e9f0;
      border-radius: 5px;
      font-size: 0.9rem;
      background: #f8f9fa;
      color: #2d3436;
      transition: border-color 0.3s;
    }

    .form-group textarea {
      resize: vertical;
      min-height: 80px;
    }

    .form-group input[readonly],
    .form-group select[disabled],
    .form-group textarea[readonly] {
      background: #e9ecef;
    }

    .form-group input:focus,
    .form-group select:focus,
    .form-group textarea:focus {
      border-color: #333333;
      outline: none;
    }

    .form-group .star-rating {
      display: inline-block;
      font-size: 1.2rem;
      color: #f1c40f;
      margin-left: 10px;
    }

    .form-group .star-rating .empty-star {
      color: #ccc;
    }

    .form-row {
      display: flex;
      gap: 15px;
      flex-wrap: wrap;
    }

    .form-row .form-group {
      flex: 1 1 45%;
      min-width: 200px;
      max-width: 400px;
    }

    .button {
      display: inline-block;
      padding: 10px 20px;
      background-color: #333333;
      color: white;
      border: none;
      border-radius: 5px;
      font-size: 0.9rem;
      cursor: pointer;
      transition: background-color 0.3s;
      width: 100%;
      margin-top: 20px;
    }

    .button:hover {
      background-color: #555555;
    }

    .back-link {
      display: block;
      margin-top: 15px;
      color: #2d3436;
      text-decoration: none;
      font-size: 0.9rem;
      text-align: center;
    }

    .back-link:hover {
      text-decoration: underline;
    }

    .success-message {
      color: green;
      margin-bottom: 15px;
      font-size: 0.9rem;
    }

    .error-message {
      color: red;
      margin-bottom: 15px;
      font-size: 0.9rem;
    }

    @media (max-width: 768px) {
      .container {
        flex-direction: column;
        padding: 0 10px !important;
      }

      .content-area {
        padding: 15px;
        height: auto;
      }

      h2 {
        font-size: 1.2rem;
      }

      h3 {
        font-size: 1.1rem;
      }

      .form-row {
        flex-direction: column;
      }

      .form-row .form-group {
        flex: 1 1 100%;
      }

      .button {
        padding: 8px;
        font-size: 0.85rem;
      }
    }

    @media (min-width: 769px) and (max-width: 1024px) {
      h2 {
        font-size: 1.3rem;
      }

      .form-row .form-group {
        flex: 1 1 45%;
      }
    }
  </style>
</head>
<body>
  <%- include('../../partials/navbar', { activePage: 'sales' }) %>

  <div class="container">
    <%- include('../../partials/company_sidebar') %>

    <div class="content-area" id="content">
      <h2>Sale Details</h2>

      <% if (successMessage) { %>
        <div class="success-message"><%= successMessage %></div>
      <% } %>
      <div class="error-message" id="error-message" style="display: none;"></div>

      <h3>Sale Information</h3>
      <div class="form-row" id="sale-info">
        <div class="form-group">
          <label>Sale ID</label>
          <input type="text" id="sales_id" readonly>
        </div>
        <div class="form-group">
          <label>Unique Code</label>
          <input type="text" id="unique_code" readonly>
        </div>
        <div class="form-group">
          <label>Sale Date</label>
          <input type="text" id="sales_date" readonly>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group">
          <label>Branch Name</label>
          <input type="text" id="branch_name" readonly>
        </div>
      </div>

      <h3>Product Information</h3>
      <div class="form-row" id="product-info">
        <div class="form-group">
          <label>Product Name</label>
          <input type="text" id="product_name" readonly>
        </div>
        <div class="form-group">
          <label>Model Number</label>
          <input type="text" id="model_number" readonly>
        </div>
        <div class="form-group">
          <label>Company Name</label>
          <input type="text" id="company_name" readonly>
        </div>
      </div>

      <h3>Customer Information</h3>
      <div class="form-row" id="customer-info">
        <div class="form-group">
          <label>Customer Name</label>
          <input type="text" id="customer_name" readonly>
        </div>
        <div class="form-group">
          <label>Mobile Number</label>
          <input type="text" id="phone_number" readonly>
        </div>
        <div class="form-group">
          <label>Address</label>
          <input type="text" id="address" readonly>
        </div>
      </div>

      <h3>Installation Details</h3>
      <div class="form-row" id="installation-info">
        <div class="form-group">
          <label>Installation Required</label>
          <input type="text" id="installation" readonly>
        </div>
        <div class="form-group">
          <label>Installation Type</label>
          <input type="text" id="installationType" readonly>
        </div>
        <div class="form-group">
          <label>Installation Charge</label>
          <input type="text" id="installationcharge" readonly>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group">
          <label>Installation Status</label>
          <div id="installation-status-form">
            <select id="installation_status" name="installation_status">
              <option value="Pending">Pending</option>
              <option value="Completed">Completed</option>
              <option value="">None</option>
            </select>
            <button class="button" id="update-installation-button">Update Installation Status</button>
          </div>
        </div>
      </div>

      <h3>Customer Feedback</h3>
      <div class="form-row" id="feedback-info">
        <div class="form-group">
          <label>Review</label>
          <textarea id="review" readonly></textarea>
        </div>
        <div class="form-group">
          <label>Rating</label>
          <input type="text" id="rating" readonly>
          <span class="star-rating" id="star-rating"></span>
        </div>
      </div>

      <a href="/company/sales" class="back-link">Back to Sales</a>
    </div>
  </div>

  <%- include('../../partials/footer', { activePage: 'sales' }) %>

  <script>
    async function loadSaleDetails() {
      try {
        const salesId = window.location.pathname.split('/').pop();
        const response = await fetch(`/company/sales/details/${salesId}`, {
          method: 'GET',
          headers: {
            'Content-Type': 'application/json'
          }
        });
        const data = await response.json();

        if (!response.ok) {
          throw new Error(data.error || 'Failed to load sale details');
        }

        const sale = data.sale;

        // Populate fields
        document.getElementById('sales_id').value = sale.sales_id;
        document.getElementById('unique_code').value = sale.unique_code;
        document.getElementById('sales_date').value = sale.sales_date;
        document.getElementById('branch_name').value = sale.branch_name;
        document.getElementById('product_name').value = sale.product_name;
        document.getElementById('model_number').value = sale.model_number;
        document.getElementById('company_name').value = sale.company_name;
        document.getElementById('customer_name').value = sale.customer_name;
        document.getElementById('phone_number').value = sale.phone_number;
        document.getElementById('address').value = sale.address;
        document.getElementById('installation').value = sale.installation;
        document.getElementById('installationType').value = sale.installationType;
        document.getElementById('installationcharge').value = sale.installationcharge;
        document.getElementById('installation_status').value = sale.installation_status;
        document.getElementById('review').value = sale.review;
        document.getElementById('rating').value = sale.rating;

        // Populate star rating
        const starRating = document.getElementById('star-rating');
        const rating = parseInt(sale.rating) || 0;
        starRating.innerHTML = Array(5).fill().map((_, i) => i < rating ? '<span>★</span>' : '<span class="empty-star">☆</span>').join('');
      } catch (error) {
        console.error('[LoadSaleDetails] Error:', error);
        const errorMessage = document.getElementById('error-message');
        errorMessage.textContent = error.message || 'Failed to load sale details';
        errorMessage.style.display = 'block';
      }
    }

    document.addEventListener('DOMContentLoaded', () => {
      loadSaleDetails();

      const updateButton = document.getElementById('update-installation-button');
      if (updateButton) {
        updateButton.addEventListener('click', async (e) => {
          e.preventDefault();
          const salesId = document.getElementById('sales_id').value;
          const installationStatus = document.getElementById('installation_status').value;
          const errorMessage = document.getElementById('error-message');

          try {
            const response = await fetch(`/company/sales/update-installation/${salesId}`, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json'
              },
              body: JSON.stringify({ installation_status: installationStatus })
            });

            if (!response.ok) {
              const text = await response.text();
              throw new Error(`HTTP error! Status: ${response.status}, Response: ${text.substring(0, 100)}...`);
            }

            const result = await response.json();
            if (result.success) {
              window.location.reload();
            } else {
              errorMessage.textContent = result.message || 'An error occurred while updating installation status.';
              errorMessage.style.display = 'block';
            }
          } catch (error) {
            console.error('[UpdateInstallationStatus] Error:', error);
            errorMessage.textContent = error.message || 'Failed to update installation status';
            errorMessage.style.display = 'block';
          }
        });
      } else {
        console.error('Update button not found in DOM');
      }
    });
  </script>
</body>
</html>