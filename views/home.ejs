    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const slides = document.querySelectorAll(".slide");
            let currentSlide = 0;

            function resetTextAnimation() {
                const currentText = slides[currentSlide].querySelector(".slide-text");
                currentText.style.animation = "none";
                void currentText.offsetWidth;
                currentText.style.animation = "slideInFromLeft 1s ease-out forwards";
            }

            setInterval(() => {
                currentSlide = (currentSlide + 1) % slides.length;
                resetTextAnimation();
            }, 5000);

            resetTextAnimation();
        });
    </script>
